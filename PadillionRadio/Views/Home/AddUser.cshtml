@model PadillionRadio.Business.Models.UserModel

@{
    ViewBag.Title = "Добавить юзера";
    Layout = "_Layout";
}

<div class="text-center">
    <h1 class="display-4">PADLILIONRADIO CLIENT</h1>
</div>

<h2>Добавить юзера</h2>
<form asp-action="AddUser" asp-controller="Home" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Email" class="control-label">Почта</label>
        <input type="text" asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-lg btn-success" />
    </div>

</form>